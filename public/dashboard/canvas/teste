const ctx = document.getElementById('alertasMes');
  const ctx2 = document.getElementById('alertasSemana');
  const ctx3 = document.getElementById("correlacaoChart");

  new Chart(ctx, {
    type: 'bar',
    data: {
      labels: ['Janeiro', 'Fevereiro', 'Março', 'Abril', 'Maio', 'Junho', 'Julho'],
      datasets: [
        {
          label: 'Temperatura',
          data: [12, 19, 8, 15, 10, 6, 9],
          backgroundColor: 'rgba(255, 99, 132, 0.8)', // vermelho
          borderRadius: 6
        },
        {
          label: 'CPU',
          data: [5, 7, 9, 6, 8, 4, 5],
          backgroundColor: 'rgba(54, 162, 235, 0.8)', // azul
          borderRadius: 6
        },
        {
          label: 'Bateria',
          data: [3, 5, 2, 4, 6, 3, 4],
          backgroundColor: 'rgba(255, 205, 86, 0.8)', // amarelo
          borderRadius: 6
        }
      ]
    },
    options: {
      responsive: true,
      maintainAspectRatio: false,
      plugins: {
        legend: {
          position: 'top',
          labels: {
            color: 'black'
          }
        },
        title: {
          display: true,
          text: 'Alertas Gerados nos Últimos Meses',
          color: 'black',
          font: { size: 18, weight: 'bold' }
        }
      },
      scales: {
        x: {
          stacked: true,
          ticks: { color: 'black' },
          grid: { color: 'rgba(255,255,255,0.1)' }
        },
        y: {
          stacked: true,
          beginAtZero: true,
          ticks: { color: 'black' },
          grid: { color: 'black' },
          title: {
            display: true,
            text: 'Quantidade de Alertas',
            color: 'black'
          }
        }
      }
    }
  });

