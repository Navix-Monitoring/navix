  new Chart(ctx3, {
      type: "scatter",
      data: {
        datasets: [
          // Pontos de dispersão
          {
            label: "Temperatura vs Falhas",
            data: [
              { x: 45, y: 2 },
              { x: 50, y: 3 },
              { x: 55, y: 5 },
              { x: 60, y: 7 },
              { x: 65, y: 9 },
              { x: 70, y: 12 },
              { x: 75, y: 14 }
            ],
            backgroundColor: "red",
            pointRadius: 6
          },
          // Linha de correlação (reta de tendência)
          {
            type: "line",
            label: "Linha de Correlação",
            data: [
              { x: 45, y: 1.5 },
              { x: 75, y: 14.5 }
            ],
            borderColor: "black",
            borderWidth: 3,
            tension: 0, 
            fill: false,
            pointRadius: 0
          }
        ]
      },
      options: {
        plugins: {
          title: {
            display: true,
            text: "Correlação entre Temperatura e Número de Falhas",
